<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnAnswer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/random_answer"
        android:scaleType="fitXY"
        android:src="@drawable/blank_8_ball"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewAnswer"
        android:layout_width="253dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.7"
        android:contentDescription="@string/answer"
        app:layout_constraintBottom_toBottomOf="@+id/btnAnswer"
        app:layout_constraintEnd_toEndOf="@+id/btnAnswer"
        app:layout_constraintStart_toStartOf="@+id/btnAnswer"
        app:layout_constraintTop_toTopOf="@+id/btnAnswer"
        app:srcCompat="@drawable/bluetriangle" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="95dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:hint="..."
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FBF4F4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAnswer"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAnswer"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageViewAnswer"
        app:layout_constraintTop_toTopOf="@+id/imageViewAnswer"
        app:layout_constraintVertical_bias="0.050000012" />

</androidx.constraintlayout.widget.ConstraintLayout>


